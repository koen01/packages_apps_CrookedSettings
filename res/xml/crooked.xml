<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/crookedsettings_title">

    <!-- Themes -->
    <com.crooked.settings.preferences.CrookedPreference
        android:key="themes_category"
        android:title="@string/themes_title"
        android:fragment="com.crooked.settings.fragments.Themes"
        android:icon="@drawable/ic_themes" />

    <!-- Lock screen -->
    <com.crooked.settings.preferences.CrookedPreference
        android:key="lockscreen_category"
        android:title="@string/lockscreen_title"
        android:fragment="com.crooked.settings.fragments.LockScreen"
        android:icon="@drawable/ic_lockscreen" />

    <!-- Status bar -->
    <com.crooked.settings.preferences.CrookedPreference
        android:key="statusbar_category"
        android:title="@string/statusbar_title"
        android:fragment="com.crooked.settings.fragments.StatusBar"
        android:icon="@drawable/ic_statusbar" />

    <!-- Quick Settings -->
    <com.crooked.settings.preferences.CrookedPreference
        android:key="quicksettings_category"
        android:title="@string/quicksettings_title"
        android:fragment="com.crooked.settings.fragments.QuickSettings"
        android:icon="@drawable/ic_quicksettings" />

    <!-- Notifications -->
    <com.crooked.settings.preferences.CrookedPreference
        android:key="notifications_category"
        android:title="@string/notifications_title"
        android:fragment="com.crooked.settings.fragments.Notifications"
        android:icon="@drawable/ic_notifs" />

    <!-- Gestures -->
    <com.crooked.settings.preferences.CrookedPreference
        android:key="gestures_category"
        android:title="@string/gestures_title"
        android:fragment="com.crooked.settings.fragments.CrookedGestures"
        android:icon="@drawable/ic_gestures" />

    <!-- Misc -->
    <com.crooked.settings.preferences.CrookedPreference
        android:key="misc_category"
        android:title="@string/misc_title"
        android:fragment="com.crooked.settings.fragments.Miscellaneous"
        android:icon="@drawable/ic_miscellaneous" />

</PreferenceScreen>
